{
  "name": "@demo-twitter/api",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "deploy": "wrangler deploy",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "db:migrate": "wrangler d1 migrations apply demo-twitter-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply demo-twitter-db --remote",
    "db:seed": "wrangler d1 execute demo-twitter-db --local --file=src/db/seed.sql",
    "db:seed:prod": "wrangler d1 execute demo-twitter-db --remote --file=src/db/seed.sql",
    "db:setup": "pnpm db:migrate && pnpm db:seed",
    "db:studio": "wrangler d1 studio demo-twitter-db --local"
  },
  "dependencies": {
    "@demo-twitter/types": "workspace:*",
    "@demo-twitter/utils": "workspace:*",
    "@hono/zod-validator": "^0.4.2",
    "hono": "^4.6.15",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241230.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wrangler": "^3.99.0"
  }
}
